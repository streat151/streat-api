{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Thickness Terms Schema",
  "type": "object",
  "properties": {
    "thickness_terms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "pattern": "^G[0-9A-F]{3}$"},
          "name": {"type": "string"},
          "comment": {"type": "string"}
        },
        "required": ["id", "name", "comment"]
      }
    }
  },
  "required": ["thickness_terms"]
}